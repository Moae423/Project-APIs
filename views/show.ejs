<div class="card bg-gray-600 shadow-xl max-w-md mx-auto">
    <div class="card-body text-center">
        <h2 class="font-bold text-2xl mb-4">Here is Your Joke</h2>
        <% if (setup && delivery) { %>
            <p class="font-bold text-xl">The Joke: <span class="text-teal-400"><%= setup %></span></p>
            <p class="font-bold text-xl">The Answer: <span class="text-teal-400"><%= delivery %></span></p>
        <% } else if (joke) { %>
            <p class="font-bold text-xl">The Joke: <span class="text-teal-400"><%= joke %></span></p>
        <% } else { %>
            <p class="font-bold text-red-400">No joke found for the selected category.</p>
        <% } %>
        <p class="mt-4 text-sm text-gray-400">
            <strong>Category:</strong> <%= category || "Unknown" %>
        </p>
        <a href="/" class="btn btn-secondary mt-4">Back to Categories</a>
    </div>
</div>
